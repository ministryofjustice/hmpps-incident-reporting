{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}

{% if report.descriptionAddendums.length != 0 %}

  {% set descriptionHtml %}
    <strong>{{ usersLookup[report.reportedBy].name or report.reportedBy }}</strong>
    <br />
    <small class="govuk-!-font-size-16">{{ report.reportedAt | timeOnDate }}</small>
    <br />
    {{ report.description | escape | nl2br }}
    {% for addendum in report.descriptionAddendums %}
      <br />
      <br />
      <strong>{{ addendum | nameOfPerson }}</strong>
      <br />
      <small class="govuk-!-font-size-16">{{ addendum.createdAt | timeOnDate }}</small>
      <br />
      {{ addendum.text | escape | nl2br }}
    {% endfor %}
  {% endset %}


{% else %}
  {% set descriptionHtml = report.description | escape | nl2br %}
{% endif %}

{% if canEditDescription %}
  {% set descriptionLink = reportUrl + "/update-details" %}
  {% set descriptionHiddenText = "incident summary" %}
{% else %}
  {% set descriptionLink = reportUrl + "/add-description" %}
  {% set descriptionHiddenText = "Add to description" %}
{% endif %}


{{ govukSummaryList({
  card: {
    title: { text: "Incident summary" }
  },
  rows: [
    {
      key: { text: "Type" },
      value: {
        text: typesLookup[report.type] or report.type
      },
      actions: {
        items: [
          {
            href: reportUrl + "/change-type",
            text: "Change",
            visuallyHiddenText: "incident type"
          }
        ]
      } if canEditReport and report.status === "DRAFT" else {}
    },
    {
      key: { text: "Date and time of incident" },
      value: {
        text: report.incidentDateAndTime | dateAndTime
      },
      actions: {
        items: [
          {
            href: reportUrl + "/update-details",
            text: "Change",
            visuallyHiddenText: "incident summary"
          }
        ]
      } if canEditReport else {}
    },
    {
      key: { text: "Description" },
      value: {
        html: descriptionHtml
      },
      actions: {
        items: [
          {
            href: descriptionLink,
            text: "Change",
            visuallyHiddenText: "incident summary"
          }
        ]
      } if canEditReport else {}
    }
  ]
}) }}
