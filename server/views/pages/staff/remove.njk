{% extends "partials/layout.njk" %}

{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/table/macro.njk" import govukTable %}

{% set pageTitle = applicationName + " â€“ Remove staff from report" %}
{% set bodyClasses = "app-remove-involvement app-remove-staff" %}

{% block beforeContent %}
  {{ super() }}

  {{ govukBackLink({
    text: "Back",
    href: backLink
  }) }}
{% endblock %}

{% block content %}

  {% include "partials/errorSummary.njk" %}

  <form id="removeStaff" method="post" novalidate>
    <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
    <input type="hidden" name="x-csrf-token" value="{{ csrfToken }}" />

    {% set staffName = involvement | nameOfPerson %}

    {{ govukRadios({
      classes: "govuk-radios--inline",
      name: "confirm",
      id: "confirm",
      fieldset: {
        legend: {
          text: "Are you sure you want to remove " + staffName + "?",
          isPageHeading: true,
          classes: "govuk-fieldset__legend--l"
        }
      },
      items: [
        {
          value: "yes",
          text: "Yes"
        },
        {
          value: "no",
          text: "No"
        }
      ],
      errorMessage: { text: errors.confirm.message } if errors.confirm else undefined
    }) }}

    <div class="govuk-button-group">
      {{ govukButton({
        text: "Continue",
        name: "submit",
        value: "continue",
        preventDoubleClick: true,
        type: "submit"
      }) }}

      {{ govukButton({
        text: "Save and exit",
        name: "submit",
        value: "exit",
        preventDoubleClick: true,
        classes: "govuk-button--secondary",
        href: "/reports/" + report.id
      }) }}
    </div>
  </form>

{% endblock %}
