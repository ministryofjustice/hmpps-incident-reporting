{% extends "partials/layout.njk" %}

{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/table/macro.njk" import govukTable %}

{% set bodyClasses = "app-prisoner-summary" %}

{% block beforeContent %}
  {{ super() }}

  {{ govukBackLink({
      text: "Back",
      href: backLink
  }) }}

  {% include "partials/notificationBanner.njk" %}
{% endblock %}

{% block content %}

  {% include "partials/errorSummary.njk" %}

  <h1 class="govuk-heading-l">{{ pageTitle }}</h1>

  {% if report.prisonersInvolved | length %}

    {% set rows = [] %}
    {% for prisoner in report.prisonersInvolved %}
      {% set actionCell %}
        <a href="/reports/{{ report.id }}/prisoners/remove/{{ loop.index }}">Remove</a> |
        <a href="/reports/{{ report.id }}/prisoners/{{ loop.index }}">Edit</a>
      {% endset %}
      {% if report.createdInNomis %}
        {% set rows = (rows.push(
          [
            { text: prisoner.prisonerNumber + ": " + (prisoner | nameOfPerson), classes: "govuk-table__cell--numeric govuk-!-text-align-left" },
            { text: prisonerInvolvementLookup[prisoner.prisonerRole] or prisoner.prisonerRole },
            { text: prisonerOutcomeLookup[prisoner.outcome] or prisoner.outcome },
            { html: prisoner.comment | escape | nl2br },
            { html: actionCell }
          ]
          ), rows) %}
      {% else %}
        {% set rows = (rows.push(
          [
            { text: prisoner.prisonerNumber + ": " + (prisoner | nameOfPerson), classes: "govuk-table__cell--numeric govuk-!-text-align-left" },
            { text: prisonerInvolvementLookup[prisoner.prisonerRole] or prisoner.prisonerRole },
            { html: prisoner.comment | escape | nl2br },
            { html: actionCell }
          ]
          ), rows) %}
      {% endif %}
    {% endfor %}

    {{ govukTable({
      classes: "app-involvement-table",
      head: tableHeading,
      rows: rows
    }) }}

  {% else %}

    <p class="govuk-!-margin-bottom-8">No prisoners have been added to this incident report.</p>

  {% endif %}

  <form id="addAnotherPrisoner" method="post" novalidate>
    <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
    <input type="hidden" name="x-csrf-token" value="{{ csrfToken }}" />

    {% if report.prisonersInvolved | length %}
      {% set radioLegend = "Do you want to add another prisoner?" %}
    {% else %}
      {% set radioLegend = "Do you want to add a prisoner?" %}
    {% endif %}

    {% set fieldName = "addPrisoner" %}
    {% set field = options.fields[fieldName] %}
    {% set items = [] %}
    {% for item in field.items %}
      {% set _ = items.push({
        value: item.value,
        text: item.label,
        hint: {text: item.hint} if item.hint else undefined
      }) %}
    {% endfor %}
    {{ govukRadios({
      name: fieldName,
      attributes: { id: fieldName },
      classes: "govuk-radios--inline",
      formGroup: {
        attributes: { id: fieldName + "__form-group" }
      },
      fieldset: {
        legend: {
          text: radioLegend,
          classes: "govuk-fieldset__legend--m"
        }
      },
      items: items,
      hint: { text: field.hint } if field.hint else undefined,
      errorMessage: { text: errors[fieldName].message } if errors[fieldName] else undefined
    }) }}

    <div class="govuk-button-group">
      {{ govukButton({
        text: "Continue",
        name: "submit",
        value: "continue",
        preventDoubleClick: true,
        type: "submit"
      }) }}

      {{ govukButton({
        text: "Save and exit",
        name: "submit",
        value: "exit",
        preventDoubleClick: true,
        classes: "govuk-button--secondary",
        href: "/reports/" + report.id
      }) }}
    </div>
  </form>

{% endblock %}
